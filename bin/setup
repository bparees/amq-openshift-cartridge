#!/bin/bash -eu
source $OPENSHIFT_CARTRIDGE_SDK_BASH

BUILD=redhat-385

case "$1" in
  -v|--version)
    version="$2"
esac
echo "$version" > "$OPENSHIFT_AMQ_DIR/env/OPENSHIFT_AMQ_VERSION"

#Download and extract the Fuse Fabric Distribution
mkdir -p $OPENSHIFT_AMQ_DIR
cd $OPENSHIFT_AMQ_DIR

unzip jboss-a-mq-6.1.0.${BUILD}.zip
ln -s jboss-a-mq-6.1.0.${BUILD} container

